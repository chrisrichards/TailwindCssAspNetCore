{
  "scripts": {
    "serve": "cross-env NODE_ENV=development concurrently \"postcss assets/css/tailwind.css -o wwwroot/css/site.css --watch\"",
    "development": "cross-env NODE_ENV=development postcss assets/css/tailwind.css -o wwwroot/css/site.css",
    "production": "cross-env NODE_ENV=production postcss assets/css/tailwind.css -o wwwroot/css/site.min.css",
    "start": "npm run serve"
  },
  "dependencies": {
    "@tailwindcss/ui": "^0.6.2",
    "autoprefixer": "^9.8.6",
    "tailwindcss": "^1.7.2"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.2",
    "cssnano": "^4.1.10",
    "live-server": "^1.2.1",
    "postcss-cli": "^7.1.1"
  }
}
